<section class="products-grid">
  <div class="container">
    <div class="products-grid-content-wrap">
      {% if section.settings.heading != blank %}
        <div class="products-grid-heading-wrap">
          <h2>{{ section.settings.heading }}</h2>
          {% if section.settings.description != blank %}
            <p>{{ section.settings.description }}</p>
          {% endif %}
        </div>
      {% endif %}

      <div class="products-grid-row">
        {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
          <div class="products-grid-item">
            <a href="{{ product.url }}">
              <div class="products-grid-image-wrap">
                <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
                
                {% if section.settings.show_label %}
                  <span class="product-label">{{ section.settings.label_text }}</span>
                {% endif %}
                
                <div class="products-grid-icons">
                  <div class="products-grid-icons-item">
                    <img src="{{ 'shop.png' | asset_url }}" alt="Add to Cart">
                  </div>
                  <div class="products-grid-icons-item">
                    <img src="{{ 'search.png' | asset_url }}" alt="View">
                  </div>
                  <div class="products-grid-icons-item">
                    <img src="{{ 'heart.png' | asset_url }}" alt="Wishlist">
                  </div>
                </div>
              </div>
              <div class="products-grid-text">
                <h5>{{ product.title }}</h5>
                <span>{{ product.price | money }}</span>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
.products-grid {
  padding: 80px 0;
}
.products-grid-content-wrap {
  display: flex;
  flex-direction: column;
  gap: 40px;
}
.products-grid-heading-wrap {
  text-align: center;
  max-width: 720px;
  margin: 0 auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 10px;
}
.products-grid-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}
.products-grid-item a {
  text-decoration: none;
  color: inherit;
  display: block;
  transition: transform 0.3s ease;
}
.products-grid-image-wrap {
  position: relative;
  overflow: hidden;
}
.products-grid-image-wrap img {
  width: 100%;
  height: 250px;
  object-fit: cover;
  display: block;
  transition: transform 0.4s ease;
}
.products-grid-item:hover .products-grid-image-wrap img {
  transform: scale(1.05);
}

/* ===== Product Label ===== */
.product-label {
  position: absolute;
  top: 10px;
  right: 10px;
  background: var(--color-primary, #000);
  color: #fff;
  font-size: 12px;
  font-weight: 600;
  padding: 6px 12px;
  border-radius: 20px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* ===== Icons ===== */
.products-grid-icons {
  position: absolute;
  bottom: 10px;
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 10px;
  opacity: 0;
  transform: translateY(-10px);
  transition: all 0.3s ease;
}
.products-grid-item:hover .products-grid-icons {
  opacity: 1;
  transform: translateY(0);
}
.products-grid-icons-item img {
  width: 38px;
  height: 38px;
  background: var(--color-background, #fff);
  padding: 10px;
  border-radius: 50%;
  box-shadow: 0 3px 8px rgba(0,0,0,0.15);
  transition: background 0.3s ease;
}
.products-grid-icons-item img:hover {
  background: var(--color-primary);
  filter: invert(-2) brightness(0.8);
}

/* ===== Text ===== */
.products-grid-text {
  text-align: center;
  margin-top: 15px;
}
.products-grid-text h5 {
  font-size: 18px;
  font-weight: 600;
  margin: 5px 0;
}
.products-grid-text span {
  font-size: 16px;
  color: var(--color-primary, #000);
  font-weight: 700;
}

/* ===== Responsive ===== */
@media (max-width: 992px) {
  .products-grid-row {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (max-width: 600px) {
  .products-grid-row {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Products Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our best-selling items."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of Products to Show",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_label",
      "label": "Show Product Label",
      "default": true
    },
    {
      "type": "text",
      "id": "label_text",
      "label": "Label Text",
      "default": "New"
    }
  ],
  "presets": [
    {
      "name": "Products Grid"
    }
  ]
}
{% endschema %}
