<section class="products-grid">
  <div class="container">
    <div class="products-grid-content-wrap">
      <div class="products-grid-heading-wrap">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.description }}</p>
      </div>

      <div class="products-grid-row">
        {% assign all_products = collections.all.products %}
        {% for product in all_products limit: section.settings.products_range %}
          <div class="products-grid-item">
            <a href="{{ product.url }}">
              <div class="products-grid-image-wrap">
                <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}">

                {% if product.compare_at_price > product.price %}
                  {% assign discount = 100 | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                  {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round %}
                  <span class="products-grid-label">-{{ discount_percentage }}%</span>
                {% endif %}

              <div class="products-grid-text">
                <h5>{{ product.title }}</h5>
                <span>{{ product.price | money }}</span>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
.products-grid {
  padding: 80px 0;
}
.products-grid-content-wrap {
  display: flex;
  flex-direction: column;
  gap: 40px;
}
.products-grid-heading-wrap {
  text-align: center;
  max-width: 720px;
  margin: 0 auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 10px;
}
.products-grid-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}
.products-grid-item a {
  text-decoration: none;
  color: inherit;
  display: block;
  transition: transform 0.3s ease;
}
.products-grid-image-wrap {
  position: relative;
  overflow: hidden;
}
.products-grid-image-wrap img {
  width: 100%;
  height: 300px;
  object-fit: cover;
  display: block;
  transition: transform 0.4s ease;
}
.products-grid-item:hover .products-grid-image-wrap img {
  transform: scale(1.05);
}

/* --- Label Ribbon (Discount %) --- */
.products-grid-label {
  position: absolute;
  top: 12px;
  right: -40px;
  background: var(--color-primary, #111);
  color: #fff;
  font-size: 12px;
  padding: 5px 40px;
  transform: rotate(45deg);
  font-weight: 600;
  text-transform: uppercase;
  z-index: 2;
}

/* Product Text */
.products-grid-text {
  text-align: center;
  margin-top: 15px;
}
.products-grid-text h5 {
  font-weight: 600;
  margin: 5px 0;
}
.products-grid-text span {
  color: var(--color-primary, #000);
  font-weight: 700;
}

/* Responsive */
@media (max-width: 992px) {
  .products-grid-row {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (max-width: 600px) {
    .products-grid {
  padding: 40px 0;
}
  .products-grid-row {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Products Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our full range of products."
    },
    {
      "type": "checkbox",
      "id": "show_label",
      "label": "Show Label Ribbon",
      "default": true
    },
    {
      "type": "text",
      "id": "label_text",
      "label": "Label Text (No longer used for discount)",
      "default": "New"
    },
    {
      "type": "range",
      "id": "products_range",
      "label": "Number of Products",
      "min": 4,
      "max": 16,
      "step": 4,
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Products Grid"
    }
  ]
}
{% endschema %}
