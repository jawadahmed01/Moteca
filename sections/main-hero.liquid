<section class="home-hero" style="background-image: url({{ section.settings.hero_image | image_url: width: 2000 }});">
  <div class="container">
    <div class="home-hero__content">
      <div class="home-hero_heading">
        {% if section.settings.subheading != blank %}
          <p class="home-hero__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h1 class="home-hero__title">{{ section.settings.heading }}</h1>
        {% endif %}
        {% if section.settings.text != blank %}
          <h4 class="home-hero__description">{{ section.settings.text }}</h4>
        {% endif %}
      </div>
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="btn-outline">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.home-hero {
  background-size: cover;
  background-position: center;
  height: 100vh;
  display: flex;
  align-items: center !important;
  justify-content: flex-start;
  gap: 30px;
  padding: 60px 0;
}

.home-hero__content {
  max-width: 600px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  gap: 30px;
}

.home-hero_heading {
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
  gap: 10px;
}

/* Responsive */
@media (max-width: 768px) {
  .home-hero {
    height: auto;
    padding: 80px 20px;
  }
}
</style>

{% schema %}
{
  "name": "Home Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Welcome Style"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, voluptates."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Home Hero",
      "category": "Hero sections"
    }
  ]
}
{% endschema %}
