<section class="two-column-section">
  <div class="container">
    <div class="two-column-content">
      <div class="two-column-left column-with-image">
        <h2>{{section.settings.heading}}</h2>
        <p>{{section.settings.description}}</p>
        <a href="{{section.settings.button_link}}" class="btn">{{section.settings.button_label}}</a>
      </div>

      <!-- Right Side -->
      <div class="two-column-right">
        <img src="{{section.settings.image | img_url: 'large'}}" alt="Our Story">
      </div>
    </div>
  </div>
</section>

<style>
.two-column-section {
  padding: 20px 0;
}

.two-column-content {
display: grid;
grid-template-columns: repeat(2,1fr);
align-items: center;
justify-content: center;
  gap: 40px;
}
.column-with-image{

}

.two-column-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 450px;
  gap: 25px;
}
.column-with-image{
  order: 2;
}

.two-column-right{
    height: 520px;
}

.two-column-right img {
  width: 100%;
  height:100%;
  display: block;
  object-fit: cover;
}

/* Responsive */
@media (max-width: 768px) {
  .two-column-section {
  padding: 40px 0;
}
.two-column-right{
    height: 320px;
}
.two-column-content {
grid-template-columns: repeat(1,1fr);
gap: 20px;
}
.column-with-image{
  order: 1;
}
}
</style>

{% schema %}
{
  "name": "Column With Image",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover Our Story"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our journey and learn how we bring quality and style together for you."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Two Column Section"
    }
  ]
}
{% endschema %}
