    },
    {
      "type": "text",
      "id": "card_2_button",
      "label": "Card 2 Button Text",
      "default": "Discover"
    },
    {
      "type": "url",
      "id": "card_2_link",
      "label": "Card 2 Link"
    },
    {
      "type": "image_picker",
      "id": "card_3_image",
      "label": "Card 3 Image"
    },
    {
      "type": "text",
      "id": "card_3_button",
      "label": "Card 3 Button Text",
